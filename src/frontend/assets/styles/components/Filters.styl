@import '../Main.styl'

.filters-container
    position fixed
    width 250px
    top 15vh
    left -282px
    background aux-color-secondary
    transition all 0.3s
    color white
    border-bottom-right-radius 2em
    padding 1em
    padding-bottom 3em;
    display flex
    flex-direction column

    h4
        margin 1em 0 1.5em 0

    select
        margin-bottom 0.7em
        height 2.3em
        background-color white
        border-radius 3px

    .checkbox-container
        display flex
        justify-content space-between

.filters-button
    cursor pointer
    position fixed
    width 35px
    height 35px
    background-color aux-color-secondary
    top 15vh
    left 0
    transition all 0.3s
    color white
    border-top-right-radius 6px
    border-bottom-right-radius 6px

.visible
    transform translateX(282px)
